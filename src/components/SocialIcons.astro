---
import info from '@/data';
import { Icon } from 'astro-icon/components';
const iconClass = 'p-1 hover:ring-4 hover:text-white rounded-full ring-2 transition ease-in-out duration-200';
const { socials } = info;

type SocialKeys = keyof typeof socials;

const size = 40;
const colors: Record<SocialKeys, string> = {
    gmail: "text-rose-700 ring-rose-700 hover:ring-rose-400 hover:bg-rose-600",
    telegram: "text-sky-700 ring-sky-700 hover:ring-sky-400 hover:bg-sky-600",
    discord: "text-indigo-700 ring-indigo-700 hover:ring-indigo-400 hover:bg-indigo-600",
    linkedin: "text-blue-700 ring-blue-700 hover:ring-blue-400 hover:bg-blue-600",
    github: "text-gray-700 ring-gray-700 hover:ring-gray-400 hover:bg-gray-700",
};

---
<div class="flex gap-2 items-center">
    {
        Object.keys(socials).map((key) => {
            const url:string = socials[key as SocialKeys];
            return (
                <a target="_blank" href={url}>
                    <Icon name={`socials/${key}`} size={size} title={key.toLocaleUpperCase()}
                        class={`${iconClass} ${colors[key as SocialKeys]}`} />
                </a>
            );
        })
    }
</div>

