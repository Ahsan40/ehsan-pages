---
import info from "@/data";
import Profile from "./profile/Profile.astro";
import SocialBar from "./SocialBar.astro";
---

<section class="min-h-screen flex gap-10 flex-col items-center md:justify-center py-12 md:py-0">
    <div class="flex flex-col md:flex-row items-center justify-center md:px-10 lg:w-2/3">
        <div>
            <Profile />
        </div>
        <div class="flex flex-col gap-2 px-10">
            <h1 class="text-4xl font-bold text-center md:text-left">
                {info.name}
            </h1>
            <h2 class="text-2xl text-center md:text-left">{info.title}</h2>
            <p class="md:text-lg text-justify">{info.description}</p>    
        </div>
    </div>

    <SocialBar />
</section>
