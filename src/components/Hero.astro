---
import info from "@/data";
import Profile from "./profile/Profile.astro";
import SocialIcons from "./SocialBar.astro";

---
<section class="h-screen pb-0 md:pb-20 px-6 sm:px-12 md:px-32 lg:px-40 bg-background text-foreground">
    <div class="h-4/5 flex justify-center content-center items-center">
      <div class="h-full md:h-full w-full grid md:grid-cols-3 md:gap-10 items-center justify-self-center justify-items-center">
        <div class="flex order-2 md:order-none flex-col gap-2 justify-center col-span-2">
            <div class="text-2xl sm:text-3xl font-semibold">Hi, I am</div>
            <div class="text-4xl sm:text-6xl font-bold text-primary">
              <h1
              >
                {info.name}
              </h1>
            </div>
            <div class="p-1 text-justify pt-5">
              <p>
                {info.description}
              </p>
            </div>
          </div>
        <Profile />
      </div>
    </div>
    <div class="flex flex-col gap-5">
          <SocialIcons />
    </div>
  </section>
